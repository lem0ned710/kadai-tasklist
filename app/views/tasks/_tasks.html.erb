<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-body">
        <div>
          
          <div>
            <% if current_user == task.user %>
            <ul style="list-style:none;">
            <span style="color:#ff0000;">status:<%= task.status %></span>
              <li>
                <span style="font-size:130%;">
                  <%= task.content %> 
                  <%= link_to "編集", edit_task_path(task), class: 'btn btn-primary btn-xs' %>
                  <%= link_to "削除", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
                </span>
              <%#= link_to user.name, user_path(user) %> --><span class="text-muted">posted at <%= task.created_at %></span>
              </li>
            </ul>
          </div>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>