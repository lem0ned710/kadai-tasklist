<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-body">
        <div>
          <span style="color:#ff0000;">status:<%= task.status %></span>
          <div>
            <span style="font-size:130%;"><%= task.content %></span>
            <% if current_user == task.user %>
              <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div>
          <%#= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>